<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg1"
    android:id="@+id/screengraphic">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|bottom">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_weight="25" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:id="@+id/layout_show_grapf">

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/graph"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="RATE"
                    android:id="@+id/textView28"
                    android:layout_weight="20"
                    android:gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0.000"
                        android:id="@+id/textView101"
                        android:textSize="30dp"
                        android:layout_weight="20"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="l/h"
                        android:id="@+id/textView102"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="TOTAL"
                    android:id="@+id/textView29"
                    android:layout_weight="10"
                    android:gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:gravity="right">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="00000.000"
                        android:id="@+id/textView30"
                        android:layout_weight="20"
                        android:gravity="right"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="m3"
                        android:id="@+id/textView31"
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView121"
                android:layout_weight="20" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="DATA"
                android:id="@+id/textView122"
                android:layout_weight="20"
                android:background="@drawable/buttup"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:onClick="onDataClick"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="GRAPHIC"
                android:id="@+id/textView123"
                android:layout_weight="20"
                android:background="@drawable/buttdown"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ERRORS"
                android:id="@+id/textView124"
                android:layout_weight="20"
                android:background="@drawable/buttup"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:onClick="onErrorsClick"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView125"
                android:layout_weight="20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"></LinearLayout>
    </LinearLayout>
</LinearLayout>