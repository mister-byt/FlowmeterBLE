<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg1"
    android:id="@+id/screendata">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:layout_weight="25" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="&lt;="
                android:id="@+id/textView14"
                android:layout_weight="15"
                android:textStyle="bold"
                android:textSize="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ERROR"
                android:id="@+id/textView27"
                android:layout_weight="15"
                android:gravity="left"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:id="@+id/textView9"
                android:textSize="30dp"
                android:layout_gravity="bottom|left"
                android:textStyle="bold"
                android:layout_weight="25"
                android:gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="â„–"
                android:id="@+id/textView26"
                android:layout_weight="5"
                android:textSize="30dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:layout_weight="25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_weight="25" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="RATE"
                android:id="@+id/textView12"
                android:layout_weight="15"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.000"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textSize="80dp"
                android:layout_weight="40"
                android:gravity="right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="l/h"
                android:id="@+id/textView10"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_weight="25" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:id="@+id/textView13"
                android:layout_weight="15"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00000.000"
                android:id="@+id/textView8"
                android:textStyle="bold"
                android:textSize="80dp"
                android:layout_weight="40"
                android:gravity="right|top"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="m3"
                android:id="@+id/textView11"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="5"
                android:gravity="left|top" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_weight="25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView21"
                android:layout_weight="20" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="DATA"
                android:id="@+id/textView22"
                android:layout_weight="20"
                android:background="@drawable/buttdown"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="GRAPHIC"
                android:id="@+id/textView23"
                android:layout_weight="20"
                android:background="@drawable/buttup"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:onClick="onGraphicClick"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ERRORS"
                android:id="@+id/textView24"
                android:layout_weight="20"
                android:background="@drawable/buttup"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:onClick="onErrorsClick"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView25"
                android:layout_weight="20" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"></LinearLayout>
    </LinearLayout>
</LinearLayout>

